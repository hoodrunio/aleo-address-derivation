{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    // "paths": {
    //   "@pkg/*": ["pkg/*"]
    // },
    "types": ["node"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["js/**/*", "pkg/**/*"]
}