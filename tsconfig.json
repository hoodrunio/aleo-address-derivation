{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@pkg/*": ["pkg/*"]
    },
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["js/**/*", "pkg/**/*"]
}